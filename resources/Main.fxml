<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/"
            fx:controller="controller.MainMenuController"
            stylesheets="@/style.css">

    <children>
        <VBox spacing="20" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50"
              AnchorPane.rightAnchor="50" AnchorPane.bottomAnchor="50" alignment="CENTER">

            <Label text="Выберите задание" styleClass="title-label"/>
            <Button text="Задание 1: Калькулятор" onAction="#openCalculator"/>
            <Button text="Задание 2: Геометрические фигуры" onAction="#openShapes"/>
            <Button text="Выход" onAction="#exitApp"/>
        </VBox>
    </children>
</AnchorPane>