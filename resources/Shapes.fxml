<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.Canvas?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ShapesController"
            stylesheets="@/style.css">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <HBox spacing="10">
                <Button text="Добавить круг" onAction="#addCircle"/>
                <Button text="Добавить прямоугольник" onAction="#addRect"/>
                <Button text="Очистить холст" onAction="#clearCanvas"/>
                <Button text="Назад" onAction="#goBack"/>
            </HBox>
            <Canvas fx:id="canvas" width="600" height="400"/>
        </VBox>
    </children>
</AnchorPane>